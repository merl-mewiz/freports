<!DOCTYPE html>
<html>
  <head>
    <title>Freports</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <%= link_to 'Главная', root_path, :class=>"nav-link" %>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="navbardrop" data-toggle="dropdown">
                        Справочники
                    </a>
                    <div class="dropdown-menu">
                        <%= link_to 'Муниципальные округа', municipalitys_path, :class=>"dropdown-item"  %>
                        <%= link_to 'Потребители сервисов', consumers_path, :class=>"dropdown-item"  %>
                        <%= link_to 'Владельцы сервисов', owners_path, :class=>"dropdown-item"  %>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= value %>
        </div>
    <% end %>

    <%= yield %>
  </body>
</html>
