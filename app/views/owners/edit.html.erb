<div class="container mt-4">
    <div class="flex-row">
        <h2 class="mb-4">Редактирование «<%= @owner.name %>»</h2>
        <div class="card">
            <div class="card-body">
                <%= render 'owner_form' %>
            </div>
            <div class="card-footer">
                <%= link_to 'К списку владельцев', owners_path,  :class => 'btn btn-sm btn-light' %>
                <%= link_to 'Удалить владельца', @owner, :method => :delete, :class => 'btn btn-sm btn-danger float-right', data: { confirm: "Вы действительно хотите удалить владельца? «#{@owner.name}»?" } %>
            </div>
        </div>
    </div>
</div>